<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/md_theme_light_surface"
    tools:context=".playback.PlayerFragment">

    <LinearLayout
        android:id="@+id/player_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="140sp"
        android:background="?attr/colorSurface">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingBottom="16dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.musicplayer.utils.MarqueeTextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textStyle="bold"
                    tools:text="Tên một bài hát rất dài để test hiệu ứng chạy chữ" />

            </FrameLayout>

            <TextView
                android:id="@+id/toolbarSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="?android:attr/textColorSecondary"
                tools:text="Tên nghệ sĩ" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ProgressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/songCurrentProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:gravity="center"
                android:singleLine="true"
                tools:text="0:00"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/progressSlider"
                app:layout_constraintBottom_toBottomOf="@id/progressSlider"
                app:layout_constraintEnd_toStartOf="@id/progressSlider"/>

            <SeekBar
                android:id="@+id/progressSlider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxHeight="2dp"
                app:layout_constraintStart_toEndOf="@id/songCurrentProgress"
                app:layout_constraintEnd_toStartOf="@id/songTotalTime"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/songTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:gravity="center"
                android:singleLine="true"
                tools:text="3:45"
                app:layout_constraintStart_toEndOf="@id/progressSlider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/progressSlider"
                app:layout_constraintBottom_toBottomOf="@id/progressSlider"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <GridLayout
            android:id="@+id/buttonGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="5"
            android:useDefaultMargins="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/repeatButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                app:srcCompat="@drawable/repeat" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/previousButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                app:srcCompat="@drawable/skip_previous_24px" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/playPauseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle_button"
                android:padding="16dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/play"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                app:srcCompat="@drawable/skip_next_24px" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/playlist_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                app:srcCompat="@drawable/playlist_play" />
        </GridLayout>
    </LinearLayout>
</FrameLayout>